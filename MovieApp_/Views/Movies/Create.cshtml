@model Movie
<h1>Create Movie</h1>

<hr>

<form asp-controller="Movies" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Director"></label>
        <input asp-for="Director" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ImagePath"></label>
        <input asp-for="ImagePath" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="GenreID"></label>
        <input asp-for="GenreID" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Ekle</button>
</form>