@model Movie
<h1>Edit Movie</h1>

<hr>

<form asp-controller="Movies" asp-action="Edit" method="post">
    <input  asp-for="ID" type="hidden"/>
    <div class="form-group mb-3">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" value="@Model.Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control">@Model.Description</textarea>
         <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Director"></label>
        <input asp-for="Director" class="form-control" value="@Model.Director" />
         <span asp-validation-for="Director" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="ImagePath"></label>
        <input asp-for="ImagePath" class="form-control" value="@Model.ImagePath" />
         <span asp-validation-for="ImagePath" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
         <label asp-for="GenreID"></label>
        <select class="form-control" asp-for="GenreID" asp-items="ViewBag.Genres">
            <option selected disabled>Tür Seçiniz</option>
        </select>
         <span asp-validation-for="GenreID" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Güncelle</button>
</form>