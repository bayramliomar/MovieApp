@model List<Genre>

<div class="list-group">
    <a href="/Movies/List/"
       class="list-group-item list-group-item-action @(ViewBag.SelectedGenre==null ? "active":"")">Tümü</a>
    @foreach (var genre in Model)
    {
        <a href="/Movies/List/@genre.ID"
       class="list-group-item list-group-item-action @(ViewBag.SelectedGenre==genre.ID.ToString() ? "active":"")">@genre.Name</a>
    }
</div>